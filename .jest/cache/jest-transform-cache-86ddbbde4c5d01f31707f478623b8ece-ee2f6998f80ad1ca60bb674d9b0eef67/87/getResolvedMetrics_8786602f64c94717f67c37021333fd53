var getResolvedMetrics = function getResolvedMetrics(item, metrics) {
  var style = item.getItemStyle();
  var margins = getMarginsFromStyle(style);
  if (margins) {
    return {
      x: metrics.x - margins.left,
      y: metrics.y - margins.top,
      width: metrics.width,
      height: metrics.height };

